



<!DOCTYPE html>
<html>
  <head>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  </head>
  <body>
  <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
         <h1> Nuevo Producto </h1>
         



<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
  <%= f.text_field :name, class:'form-control input-lg-8', placeholder: 'nombre del producto' %>
  </div>

  <div class="form-group">
            <%= f.text_field :price, class: "form-control input-lg-8", placeholder: "Precio del producto" %>
          </div>

          <div class="field">
  <% Category.all.each do |category| %>
  <%= check_box_tag 'product[category_ids][]', category.id %>
  <%= category.name %> <br>
  <%end%>
  </div>


 <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
            </div>
    <%end %>
  
</form>
         
          
        </div>
      </div>
    </div>
  </body>
</html>
